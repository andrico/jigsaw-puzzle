{
  "name": "jigsaw-puzzle",
  "version": "1.0.3",
  "description": "A canvas puzzle generator",
  "main": "dist/jigsaw-puzzle.min.js",
  "module": "src/index.js",
  "files": [
    "src",
    "dist"
  ],
  "browserslist": [
    "last 1 Chrome version"
  ],
  "scripts": {
    "start": "node server.js",
    "clear": "rm -r -f dist",
    "watch": "parcel -p 1234 watch index.html",
    "build": "yarn clear && parcel build src/index.js -o jigsaw-puzzle.min.js --no-source-maps"
  },
  "keywords": [
    "jigsaw",
    "puzzle",
    "canvas"
  ]
}
